<div class="col-lg-6 offset-lg-3 col-md-6 offset-3 col-sm-12 col-xs-12 mt-5 pt-5">
<h2>Olvidó su contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-sm" %>
  </div>

  <div class="form-group mb-3">
    <%= f.submit "Enviar información al Email", class:"btn btn-primary btn-sm" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
</div>